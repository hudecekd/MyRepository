        <Button x:Name="btnSendSms" Content="Send SMS" HorizontalAlignment="Left" Margin="137,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.233,0.427" Click="btnSendSms_Click"/>
        <TextBox x:Name="txtTo" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="721083014" VerticalAlignment="Top" Width="214"/>

    </Grid>
</Page>
